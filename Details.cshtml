@model CakeShop.Areas.Admin.Models.ChiTietHangHoa

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Chi tiết hàng hóa</h1>

<!-- Page Heading -->
<h1 class="h3 mb-4 text-gray-800">Thông tin sản phẩm</h1>

<div class="row">
    <div class="col-lg-6">
        <!-- Circle Buttons -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Thông tin sản phẩm</h6>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.TenHh)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TenHh)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.TenAlias)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TenAlias)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.MoTaDonVi)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.MoTaDonVi)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.DonGia)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DonGia)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Hinh)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Hinh)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.NgaySx)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.NgaySx)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.GiamGia)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.GiamGia)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.SoLanXem)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.SoLanXem)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.MoTa)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.MoTa)
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-lg-6">

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Hình ảnh sản phẩm</h6>
            </div>
            @if (Model.HinhanhSps == null || !Model.HinhanhSps.Any())
            {
                <div class="card-body col-12 col-md-6">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <img src="~/Hinh/HangHoa/@Model.Hinh" alt="@Model.TenHh" />
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                @foreach (var hinhanh in Model.HinhanhSps)
                {
                    <img src="~/Hinh/HangHoa/@hinhanh.HinhAnhPhu" alt="@Model.TenHh" />
                    <div class="card-body col-12 col-md-6">
                        <div class="card border-left-primary shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <img src="~/Hinh/HangHoa/@hinhanh.HinhAnhPhu" alt="@Model.TenHh" />
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.MaHh">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
