@model CakeShop.Data.HinhanhSp

@{
    ViewData["Title"] = "Thêm hình ảnh";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h1>Thêm hình ảnh phụ cho sản phẩm</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaHh" class="control-label"></label>
                <select asp-for="MaHh" class ="form-control" asp-items="ViewBag.MaHh"></select>
            </div>
            <div class="form-group">
                <label asp-for="HinhAnhPhu" class="control-label"></label>
                <input type="file" asp-for="HinhAnhPhu" name="HinhAnhPhu" class="form-control" accept=".png, .jpg, .jpeg" />
                <span asp-validation-for="HinhAnhPhu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-warning">Back to List</a>
</div>

