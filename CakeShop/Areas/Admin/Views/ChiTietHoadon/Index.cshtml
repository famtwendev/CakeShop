@model IEnumerable<CakeShop.Data.ChiTietHd>

@{
    ViewData["Title"] = "Danh sách chi tiết hóa đơn";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Danh sách chi tiết hóa đơn</h1>
<table class="table">
    <thead class="table-warning">
        <tr>
            <th>
                Mã hóa đơn
            </th>
            <th>
                Mã hàng hóa
            </th>
            <th>
                Đơn giá
            </th>
            <th>
                Số lượng
            </th>
            <th>
                Giảm giá
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
            string @cls = "table-success";
        }
        @foreach (var item in Model)
        {
            i = i + 1;
            cls = "table-success";
            if (i % 2 == 0)
            {
                cls = "table-info";
            }
            <tr class="@cls">
                <td>
                    @Html.DisplayFor(modelItem => item.MaHdNavigation.MaHd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaHhNavigation.MaHh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DonGia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GiamGia)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaCt" class="btn btn-warning">Chỉnh sửa</a> |
                    <a asp-action="Details" asp-route-id="@item.MaCt" class="btn btn-info">Chi Tiết</a> |
                    <a asp-action="Delete" asp-route-id="@item.MaCt" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
