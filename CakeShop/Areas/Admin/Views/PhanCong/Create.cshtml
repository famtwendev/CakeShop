@model CakeShop.Data.PhanCong

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Thêm sự phân công</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaNv" class="control-label"></label>
                <select asp-for="MaNv" class ="form-control" asp-items="ViewBag.MaNv"></select>
            </div>
            <div class="form-group">
                <label asp-for="MaPb" class="control-label"></label>
                <select asp-for="MaPb" class ="form-control" asp-items="ViewBag.MaPb"></select>
            </div>
            <div class="form-group">
                <label asp-for="NgayPc" class="control-label"></label>
                <input asp-for="NgayPc" class="form-control" />
                <span asp-validation-for="NgayPc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HieuLuc" class="control-label"></label>
                <input asp-for="HieuLuc" class="form-control" />
                <span asp-validation-for="HieuLuc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-warning">Back to List</a>
</div>

