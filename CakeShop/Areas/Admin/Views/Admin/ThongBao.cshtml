@{
    ViewData["Title"] = "Thông Báo";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAccount.cshtml";
}
<!-- 404 Start -->
<div class="container-fluid py-5">
    <div class="container py-5 text-center">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <i class="bi bi-check-circle display-1 text-secondary"></i>
                <h1 class="mb-4">THÔNG BÁO CHÚC MỪNG</h1>
                <h3 class="mb-4 danger">@TempData["Message"]</h3>
                @* <a class="btn border-secondary rounded-pill py-3 px-5" asp-controller="Home" asp-action="Index">Go Back To Home</a> *@
            </div>
        </div>
    </div>
</div>
<!-- JavaScript for redirection after 2 seconds -->
<script type="text/javascript">
    setTimeout(function () {
        window.location.href = '@Url.Action("Index", "Admin")';
    }, 2000);
</script>
<!-- 404 End -->