@model CakeShop.ModelsView.RegisterVM
@{
    ViewData["Title"] = "Đăng ký";
}
<div class="checkout_area section-padding-80">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-6">
                <div class="checkout_details_area mt-50 clearfix">
                    <div class="cart-page-heading mb-30">
                        <h4>Đăng ký thành viên</h4>
                    </div>

                    <form action="DangKy" method="post" enctype="multipart/form-data">
                        <div class="row">

                            <div class="col-md-6 mb-3">
                                <label asp-for="@Model.MaKh"></label><span class="text-primary"> * </span>
                                <input type="text"
                                       asp-for="@Model.MaKh"
                                       class="form-control"
                                       required />
                                <span asp-validation-for="@Model.MaKh" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="@Model.MatKhau"></label><span class="text-primary"> * </span>
                                <input type="password"
                                       asp-for="@Model.MatKhau"
                                       class="form-control"
                                       required />
                                <span asp-validation-for="@Model.MatKhau" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="@Model.HoTen"></label><span class="text-primary"> * </span>
                                <input type="text"
                                       asp-for="@Model.HoTen"
                                       class="form-control"
                                       required />
                                <span asp-validation-for="@Model.HoTen" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="@Model.GioiTinh"></label><span class="text-primary"> * </span>
                                <div class="custom-control custom-checkbox d-flex mb-2 align-items-center justify-content-between">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                                        <label class="form-check-label" for="flexRadioDefault1">
                                            Nam
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
                                        <label class="form-check-label" for="flexRadioDefault2">
                                            Nữ
                                        </label>
                                        @*                                     <input asp-for="@Model.GioiTinh" type="checkbox"
                                        class="custom-control-input"
                                        id="customCheck2" />
                                        <label asp-for="@Model.GioiTinh" class="custom-control-label">Nam</label> *@
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="@Model.NgaySinh"></label><span class="text-primary"> * </span>
                                <input type="date"
                                       asp-for="@Model.NgaySinh"
                                       class="form-control"
                                       required />
                                <span asp-validation-for="@Model.NgaySinh" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="@Model.DiaChi"></label><span class="text-primary"> * </span>
                                <input type="text"
                                       asp-for="@Model.DiaChi"
                                       class="form-control"
                                       required />
                                <span asp-validation-for="@Model.DiaChi" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="@Model.DienThoai"></label><span class="text-primary"> * </span>
                                <input type="text"
                                       asp-for="@Model.DienThoai"
                                       class="form-control"
                                       required />
                                <span asp-validation-for="@Model.DienThoai" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="@Model.Email"></label><span class="text-primary"> * </span>
                                <input type="email"
                                       asp-for="@Model.Email"
                                       class="form-control"
                                       required />
                                <span asp-validation-for="@Model.Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 mb-3">
                                <label asp-for="@Model.Hinh"></label><span class="text-primary"> * </span>
                                <input type="file"
                                       asp-for="@Model.Hinh"
                                       name="Hinh"
                                       class="file-upload"
                                       required
                                       accept=".png, .jpg, .jpeg" />
                                <span asp-validation-for="@Model.Hinh" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 my-3">
                                <button type="submit" class=" btn essence-btn w-100">Đăng ký</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-5 ml-lg-auto mt-50 d-flex justify-content-center align-items-center">
                <div class="order-details-confirmation">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-avatar">
                                <img class="avatar-img" src="~/img/product-img/product-big-2.jpg" alt="Avatar" accept="image/*">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
