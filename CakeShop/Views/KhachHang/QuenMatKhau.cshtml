@model CakeShop.ModelsView.ForgotPassword.QuenMatKhau
@{
	ViewData["Title"] = "Quên mật khẩu";
}

<form asp-action="QuenMatKhau" asp-controller="KhachHang" method="post">
	<div class="container-fluid py-5">
		<div class="container py-5 text-center">
			<div class="row justify-content-center">
				<div class="col-lg-6">
					<i class="bi bi-check-circle display-1 text-secondary"></i>
					<div class="border border-gray rounded-5 shadow p-5">
						<ul class="m-0 p-0">
							<li class="pb-2" style="list-style: none">
								<h5 class="text-start">
									Nhập email để tìm kiếm tài khoản của bạn.
									<br>
								</h5>
							</li>
						</ul>
						<ul class="m-0 p-0">
							<li class="pb-4" style="list-style: none">
								<div class="form-outline" data-mdb-input-init>
									<input asp-for="Email" type="email" name="email"
										   class="form-control form-control-lg" value="" />
									@* <span asp-validation-for="@Model.Email" class="text-danger"></span> *@
									<b><div class="text-danger text-start mt-3" asp-validation-summary="All"></div></b>
								</div>
							</li>
						</ul>
						<ul class="m-0 p-0">
							<li class="text-end" style="list-style: none">
								<a class="btn btn-secondary" asp-action="DangNhap" asp-controller="KhachHang"
								   data-mdb-ripple-init>Hủy</a>
								<button type="submit" class="btn btn-primary" data-mdb-ripple-init>Tìm kiếm</button>
							</li>
						</ul>
					</div>
				
				</div>
			</div>
		</div>
	</div>
</form>

